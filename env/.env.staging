# Staging Environment Configuration

# Database Configuration
DATABASE_HOST=postgres-service
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=CHANGE_THIS_IN_SECRETS
DATABASE_NAME=ai_testing_platform_staging

# Redis Configuration
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_IN_SECRETS

# JWT Configuration
JWT_SECRET=CHANGE_THIS_IN_SECRETS
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=CHANGE_THIS_IN_SECRETS
JWT_REFRESH_EXPIRATION=30d

# OpenAI Configuration
OPENAI_API_KEY=CHANGE_THIS_IN_SECRETS
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# MinIO/S3 Configuration
MINIO_ENDPOINT=minio-service
MINIO_PORT=9000
MINIO_ACCESS_KEY=CHANGE_THIS_IN_SECRETS
MINIO_SECRET_KEY=CHANGE_THIS_IN_SECRETS
MINIO_USE_SSL=false
MINIO_BUCKET=test-artifacts-staging

# Application Configuration
NODE_ENV=staging
PORT=3000
API_PORT=3001
FRONTEND_URL=https://staging.testing-platform.example.com
BACKEND_URL=https://api-staging.testing-platform.example.com

# CORS Configuration
CORS_ORIGIN=https://staging.testing-platform.example.com

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Playwright Configuration
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_SCREENSHOT_ON_FAILURE=true
PLAYWRIGHT_VIDEO_ON_FAILURE=true
PLAYWRIGHT_TIMEOUT=30000

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=CHANGE_THIS_IN_SECRETS
SMTP_PASSWORD=CHANGE_THIS_IN_SECRETS
SMTP_FROM=noreply@testing-platform.com

# Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_VIDEO_RECORDING=true
ENABLE_AI_FEATURES=true
MAX_PARALLEL_TESTS=10
